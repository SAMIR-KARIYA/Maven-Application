#!/usr/bin/env groovy
pipeline {
    agent any

    stages {
        stage('Check Maven Version') {
            steps {
                script {
                    // Run the Maven version command using Windows batch script
                    //def mvnVersion = bat(script: 'mvn --version', returnStdout: true).trim()
                    bat 'mvn --version'
                    // Print the result
                    //echo "Maven Version:\n${mvnVersion}"
                }
            }
        }
        stage('validate Maven Project') {
            steps {
                script {
                    // Run the Maven validate command using Windows batch script
                    bat 'mvn validate'
                }
            }
        }
        stage('Compile Maven Project') {
            steps {
                script {
                    // Run the Maven compile command using Windows batch script
                    bat 'mvn compile'
                }
            }
        }
        stage('Test Maven Project') {
            steps {
                script {
                    // Run the Maven test command using Windows batch script
                    bat 'mvn test'
                }
            }
        }
        stage('Package Maven Project') {
            steps {
                script {
                    // Run the Maven package command using Windows batch script
                    bat 'mvn package'
                }
            }
        }
    }
}
