pipeline {
    agent any

    stages {
        stage('Check Maven Version') {
            steps {
                script {
                    // Run the Maven version command
                    def mvnVersion = sh(script: 'mvn --version', returnStdout: true).trim()

                    // Print the result
                    echo "Maven Version:\n${mvnVersion}"
                }
            }
        }
    }
}
